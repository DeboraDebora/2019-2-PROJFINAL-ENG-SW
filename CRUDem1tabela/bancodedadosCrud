CREATE SCHEMA TrampoFacil;

use TrampoFacil;  

--criacao das tabelas
CREATE TABLE Usuario
{
		nomeUsuario varchar(50) primary key,
		tipoServico varchar(30),
		cpf varchar(11),
		email varchar (20),
		telefone integer(11);
		
		
}
--Você pode alterar os contratos registrados com o nome, data, valor e serviço que oferece.

--Usuario:
￼
--Servico:
￼
--Data:


CREATE TABLE Contrato
{
	idContrato int primary key,
	valor decimal (10,2),
	data DATE,
	servico varchar(50),
	nomeUsuario varchar(50) foreign key, 
	nomeUsuario varchar(50) foreign key;

}


